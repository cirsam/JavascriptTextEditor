@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div>
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>

    <style>
        .editor {
            border: solid 1px #ccc;
            padding: 20px;
            min-height: 200px;
        }

        .isd-toolbar {
            border: solid 1px #ddd;
            background: #f4f4f4;
            padding: 5px;
            border-radius: 3px;
            font-size:12px;
        }

        .hideIsdItem {
            display: none !important;
        }

        .btn {
            display: inline-block;
            font-weight: 400;
            color: #212529;
            text-align: center;
            vertical-align: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
            background-color: transparent;
            border: 1px solid transparent;
            padding: 5px;
            font-size: 1rem;
            line-height: 1.5;
            border-radius: .25rem;
            transition: color .15s ease-in-out,background-color .15s ease-in-out,border-color .15s ease-in-out,box-shadow .15s ease-in-out;
        }
    </style>

    <div class="isd-toolbar">
        <div class="btn-group open">
            <button id="divFontSize" class="btn dropdown-toggle" data-toggle="dropdown" title="Font Size">
                <span class="btn">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-fonts" viewBox="0 0 16 16">
                        <path d="M12.258 3h-8.51l-.083 2.46h.479c.26-1.544.758-1.783 2.693-1.845l.424-.013v7.827c0 .663-.144.82-1.3.923v.52h4.082v-.52c-1.162-.103-1.306-.26-1.306-.923V3.602l.431.013c1.934.062 2.434.301 2.693 1.846h.479L12.258 3z" />
                    </svg>
                </span>
            </button>
            <ul class="dropdown-menu">
                <li><button class="btn" data-edit="fontSize 1" onclick="changeFontSize(1)" ><font size="1">Smallest</font></button></li>
                <li><button class="btn" data-edit="fontSize 3" onclick="changeFontSize(2)" ><font size="2">Small</font></button></li>
                <li><button class="btn" data-edit="fontSize 3" onclick="changeFontSize(3)" ><font size="3">Normal</font></button></li>
                <li><button class="btn" data-edit="fontSize 3" onclick="changeFontSize(4)" ><font size="4">Medium</font></button></li>
                <li><button class="btn" data-edit="fontSize 5" onclick="changeFontSize(5)" ><font size="5">Large</font></button></li>
                <li><button class="btn" data-edit="fontSize 5" onclick="changeFontSize(7)" ><font size="7">Largest</font></button></li>
            </ul>
        </div>
